---
import SectionHeader from '@/components/SectionHeader.astro';

// You can override these via props if you like
const {
  phone    = '+1 (860) 716-3403',
  phoneHref = 'tel:+18607163403',
  email    = 'info@campdavidct.com',
  emailHref = 'mailto:info@campdavidct.com',
  address1 = '382 Bantam Lake Rd',
  address2 = 'Morris, CT 06763',
  // Google Maps embed (use your preferred address)
  mapEmbed = 'https://maps.google.com/maps?q=382%20Bantam%20Lake%20Rd%20Morris%20CT&t=&z=13&ie=UTF8&iwloc=&output=embed',
} = Astro.props;
---

<section class="bg-neutral-100">
  <div class="mx-auto max-w-6xl px-4 py-14">
    <div class="grid gap-10 md:grid-cols-[1.1fr,1fr]">
      <!-- Left: title + contact cards -->
      <div>
        <SectionHeader
          kicker="Get in Touch"
          title="Weâ€™d Love to Hear From You"
          align="left"
          dense={true}
        />

        <div class="mt-8 grid gap-4 sm:grid-cols-2">
          <!-- Phone -->
          <a href={phoneHref} class="group flex items-start gap-4 rounded-xl border border-black/10 bg-white p-4 ring-0 transition hover:border-black/20">
            <span class="grid h-10 w-10 shrink-0 place-items-center rounded-md bg-neutral-900/90 text-white">
              <iconify-icon icon="mdi:phone" width="18" height="18" />
            </span>
            <span>
              <div class="text-[13px] uppercase tracking-wider text-neutral-500">Call</div>
              <div class="text-[16px] font-semibold text-neutral-900">{phone}</div>
            </span>
          </a>

          <!-- Email -->
          <a href={emailHref} class="group flex items-start gap-4 rounded-xl border border-black/10 bg-white p-4 transition hover:border-black/20">
            <span class="grid h-10 w-10 shrink-0 place-items-center rounded-md bg-neutral-900/90 text-white">
              <iconify-icon icon="mdi:email-outline" width="18" height="18" />
            </span>
            <span>
              <div class="text-[13px] uppercase tracking-wider text-neutral-500">Email</div>
              <div class="text-[16px] font-semibold text-neutral-900">{email}</div>
            </span>
          </a>

          <!-- Address -->
          <div class="flex items-start gap-4 rounded-xl border border-black/10 bg-white p-4">
            <span class="grid h-10 w-10 shrink-0 place-items-center rounded-md bg-neutral-900/90 text-white">
              <iconify-icon icon="mdi:map-marker-outline" width="18" height="18" />
            </span>
            <span>
              <div class="text-[13px] uppercase tracking-wider text-neutral-500">Address</div>
              <div class="text-[16px] font-semibold text-neutral-900">{address1}</div>
              <div class="text-[15px] text-neutral-700">{address2}</div>
            </span>
          </div>

          <!-- Contact form link -->
          <a href="/contact" class="flex items-start gap-4 rounded-xl border border-black/10 bg-white p-4 transition hover:border-black/20">
            <span class="grid h-10 w-10 shrink-0 place-items-center rounded-md bg-neutral-900/90 text-white">
              <iconify-icon icon="mdi:chat-outline" width="18" height="18" />
            </span>
            <span>
              <div class="text-[13px] uppercase tracking-wider text-neutral-500">Message</div>
              <div class="text-[16px] font-semibold text-neutral-900">Contact Form</div>
            </span>
          </a>
        </div>

        <!-- Optional: swap this NOTE for your AI Concierge component -->
        <!-- <div class="mt-6 rounded-xl border border-black/10 bg-white p-4">
          <AIChat.client />
        </div> -->
      </div>

      <!-- Right: compact map with expand-on-demand -->
      <aside class="space-y-4">
        <div class="overflow-hidden rounded-xl border border-black/10 bg-white">
          <iframe
            class="aspect-[4/3] w-full"
            src={mapEmbed}
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Map to Camp David"
          ></iframe>
        </div>
      </aside>
    </div>
  </div>
</section>

<!-- LocalBusiness schema (helps with knowledge panels / directions) -->
<script type="application/ld+json" is:inline>
{JSON.stringify({
  '@context': 'https://schema.org',
  '@type': 'LodgingBusiness',
  name: 'Camp David',
  email: email,
  telephone: phone,
  address: {
    '@type': 'PostalAddress',
    streetAddress: address1,
    addressLocality: 'Morris',
    addressRegion: 'CT',
    postalCode: '06763',
    addressCountry: 'US'
  },
  url: 'https://www.campdavidct.com',
  sameAs: [
    // Add socials if you want them surfaced
  ]
})}
</script>