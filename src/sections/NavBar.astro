---
import ConciergeFab from '@/components/ConciergeFab.astro';


const links = [
  { href: '#', label: 'ABOUT US' },
  { href: '#CottagesGrid', label: 'COTTAGES' },
  { href: '/availability', label: 'AVAILABILITY' },
  { href: '#', label: 'CONTACT' },
];

const socials = [
  { href: 'https://www.facebook.com/CampDavidCT', label: 'Facebook', icon: 'mdi:facebook' },
  { href: 'https://wa.me/18607600480?text=I%20need%20more%20information%20about%20Camp%20David', label: 'WhatsApp', icon: 'mdi:whatsapp' },
  { href: 'https://vimeo.com/user179088508', label: 'Vimeo', icon: 'mdi:vimeo' },
];
---
<nav class="sticky top-0 z-40 bg-neutral-900/95 text-white" role="navigation" aria-label="Primary">      
  <div class="mx-auto max-w-6xl px-4 h-14 flex items-center justify-between">
    <!-- left: logo + links -->
    <div class="flex items-center gap-6">
      <!-- logo â€¦ -->
<!-- Left: primary links -->
      <ul class="hidden md:flex items-center justify-center gap-4 text-[13px] uppercase tracking-[0.12em]">
        {links.map((l, i) => (
          <>
            <li>
              <a
                href={l.href}
                class="opacity-90 hover:opacity-100 focus:outline-none focus-visible:ring-2 focus-visible:ring-white/70 rounded-[2px]"
              >
                {l.label}
              </a>
            </li>
            {i < links.length - 1 && (
              <li aria-hidden="true" class="mx-2 opacity-40 select-none">|</li>
            )}
          </>
        ))}
      </ul>    </div>

    <!-- right: socials then AI button -->
    <div class="flex items-center gap-3">
      <!-- Socials (optional; feel free to hide on mobile) -->
      <a class="hidden sm:grid h-9 w-9 place-items-center rounded-full bg-white/10 ring-1 ring-white/10 hover:bg-white/20" href="https://www.facebook.com/CampDavidCT" aria-label="Facebook" target="_blank" rel="noopener">
        <iconify-icon icon="mdi:facebook" width="18" height="18"></iconify-icon>
      </a>
      <a class="hidden sm:grid h-9 w-9 place-items-center rounded-full bg-white/10 ring-1 ring-white/10 hover:bg-white/20" href="https://wa.me/18607600480?text=I%20need%20more%20information%20about%20Camp%20David" aria-label="WhatsApp" target="_blank" rel="noopener">
        <iconify-icon icon="mdi:whatsapp" width="18" height="18"></iconify-icon>
      </a>
      <a class="hidden sm:grid h-9 w-9 place-items-center rounded-full bg-white/10 ring-1 ring-white/10 hover:bg-white/20" href="https://vimeo.com/user179088508" aria-label="Vimeo" target="_blank" rel="noopener">
        <iconify-icon icon="mdi:vimeo" width="18" height="18"></iconify-icon>
      </a>

      <!-- The ONE AI launcher -->
 <ConciergeFab />
    </div>
  </div>
</nav>