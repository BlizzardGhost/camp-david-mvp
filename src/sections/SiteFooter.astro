---
const year = new Date().getFullYear();

const socials = [
  { href: 'https://www.facebook.com/CampDavidCT', label: 'Facebook', icon: 'mdi:facebook' },
  { href: 'https://wa.me/18607600480?text=I%20need%20more%20information%20about%20Camp%20David', label: 'WhatsApp', icon: 'mdi:whatsapp' },
  { href: 'https://vimeo.com/user179088508', label: 'Vimeo', icon: 'mdi:vimeo' },
];
---

<footer class="bg-neutral-900 text-neutral-100">
  <div class="mx-auto max-w-6xl px-4 py-12 md:py-16">
    <!-- 12-col grid for balanced columns -->
    <div class="grid gap-y-12 gap-x-10 md:grid-cols-12 md:items-start">
      <!-- Brand / blurb (5 cols) -->
      <div class="md:col-span-6 min-w-0">
        <a href="/" class="inline-flex items-center gap-3">
          <img src="/logo.png" alt="Camp David logo" class="h-9 w-auto" loading="lazy" />
          <span class="sr-only">Camp David · Bantam Lake</span>
        </a>

        <p class="mt-5 max-w-md text-[15px] leading-7 text-neutral-300">
          Modern & delightful cottages on beautiful Bantam Lake in Litchfield County, CT.
          Family reunions, weddings, and lakeside escapes—year round.
        </p>

        <div class="mt-5 flex items-center gap-3">
          {socials.map((s) => (
            <a
              href={s.href}
              target="_blank"
              rel="noopener"
              aria-label={s.label}
              class="grid h-9 w-9 place-items-center rounded-full bg-white/10 ring-1 ring-white/10 hover:bg-white/20 focus:outline-none focus-visible:ring-2 focus-visible:ring-white/40"
            >
              <iconify-icon icon={s.icon} width="18" height="18"></iconify-icon>
            </a>
          ))}
        </div>
      </div>

      <!-- Cottages (3 cols) -->
      <nav aria-label="Cottages" class="md:col-span-3 text-[15px]">
        <div class="text-neutral-400 tracking-wider uppercase text-xs">Cottages</div>
        <ul class="mt-3 space-y-2">
          <li><a class="hover:underline underline-offset-2" href="#lakefront">Lakefront</a></li>
          <li><a class="hover:underline underline-offset-2" href="#viewpoint">Viewpoint</a></li>
          <li><a class="hover:underline underline-offset-2" href="#maplecrest">Maplecrest</a></li>
          <li><a class="hover:underline underline-offset-2" href="#hilltop">Hilltop</a></li>
        </ul>
      </nav>

      <!-- Useful Links (3 cols) -->
      <nav aria-label="Useful links" class="md:col-span-3 text-[15px]">
        <div class="text-neutral-400 tracking-wider uppercase text-xs">Useful Links</div>
        <ul class="mt-3 space-y-2">
          <li><a class="hover:underline underline-offset-2" href="/availability">Availability</a></li>
          <li><a class="hover:underline underline-offset-2" href="/reviews">Reviews</a></li>
          <li><a class="hover:underline underline-offset-2" href="/contact">Contact</a></li>
          <li><a class="hover:underline underline-offset-2" href="/weddings-special-events">Weddings & Events</a></li>
        </ul>
      </nav>
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="border-t border-white/10 bg-neutral-950">
    <div class="mx-auto flex max-w-6xl flex-col gap-2 px-4 py-4 text-[13px] text-neutral-400 sm:flex-row sm:items-center sm:justify-between">
      <div>© {year} Camp David — All Rights Reserved.</div>
      <div class="flex flex-wrap items-center gap-4">
        <a class="hover:text-neutral-200" href="/privacy">Privacy</a>
        <a class="hover:text-neutral-200" href="/sitemap.xml">Sitemap</a>
        <span class="hidden sm:inline opacity-50">•</span>
        <a class="hover:text-neutral-200" href="https://infusion.example" target="_blank" rel="noopener">
          Crafted by Infusion
        </a>
      </div>
    </div>
  </div>
</footer>